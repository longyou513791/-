<% include header %>
<h2>Write a new entry</h2>
<form method="post" role="form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title"  value=<%=title %> required> </div>
<div class="form-group">
<label for="name">Entry text</label>
<textarea class="form-control" id="name" name="name" rows="3" required><%=content%></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="Post entry" class="btn btn-primary">
  </div>
</form>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script> 
<script type="text/javascript" src="/edit.js" ></script>

<% include footer %>